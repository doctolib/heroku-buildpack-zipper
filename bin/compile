#!/bin/sh

set -x
set -e

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

APT_CACHE_DIR="$CACHE_DIR/apt/cache"
APT_STATE_DIR="$CACHE_DIR/apt/state"

mkdir -p "$APT_CACHE_DIR/archives/partial"
mkdir -p "$APT_STATE_DIR/lists/partial"

APT_OPTIONS="-o debug::nolocking=true -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR"

echo "-----> Installing Xvfb"
apt-get $APT_OPTIONS -y --force-yes -d install --reinstall xvfb

for DEB in `ls -1 $APT_CACHE_DIR/archives/*.deb`; do
  dpkg -x $DEB $BUILD_DIR/.apt/
done

echo "-----> Compiling zipper files"
cd $BUILD_DIR/zipper
yarn

export GIT_COMMIT_SHA1=$(cat ${ENV_DIR}/HEROKU_TEST_RUN_COMMIT_VERSION)
yarn build:chrome

echo "-----> Creating zipper extension"
xvfb-run /opt/google/chrome/chrome --no-sandbox --pack-extension=extension --pack-extension-key=zipper.pem
test -f extension.crx
